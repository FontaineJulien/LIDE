{% block body %}
    <div class="modal_content m-4">
        <div>
            <div class="card">
                <div class="card-heading">
                    <h3 class="card-title p-3">Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"></div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</td>
                                    <td>{{ user.username }} </td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row p-4">
                        <div class="col">
                            <A href="/LIDE/web/app_dev.php/profile/edit"> <input type="submit"
                                                                                 class="btn btn-success btn-block w-100"
                                                                                 value="{{ 'Editer le Profile'|trans }}"
                                                                                 data-toggle="modal"
                                                                                 data-target="#edit_profile"/></A>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}