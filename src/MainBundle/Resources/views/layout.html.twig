<!DOCTYPE html>
<html>
   <head>
       <meta charset="UTF-8" />
       <title>{% block title %}L.I.D.E{% endblock %}</title>

        {% block stylesheet %}
           <link rel="stylesheet" href="{{ asset('css/plugins/bootstrap.min.css')}}"/>
           <link rel="stylesheet" href="{{ asset('css/navbar.css')}}" />
        {% endblock %}

   </head>

   <body class="p-0 bg-primary">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark vh-10">
          <a class="navbar-brand" href="#">LIDE</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
              {% block navbarCollapse %}
                <li class="nav-item">
                  <a class="nav-link" href="{{path('easyadmin')}}">Admin<span class="sr-only">(current)</span></a>
                </li>
              {% endblock %}
            </ul>
          </div>
        </nav>
        
        {% block body %}
        {% endblock %}

        {% block javascript %}
          <script src="{{ asset('js/plugins/jquery.min.js')}}"></script>
          <script src="{{ asset('js/plugins/popper.min.js')}}"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
          <script src="{{ asset('js/plugins/bootstrap.min.js')}}"></script>
        {% endblock %}
   </body>
</html>
