    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalOptionsLabel">Options</h5>
            </div>
            <div class="modal-body container-fluid">
                {{ form_start(form) }}
                        {{ form_row(form.aceTheme, {'id':'ace-theme-selector'}) }} 
                        {{ form_row(form.consoleTheme, {'id':'console-theme-selector'}) }}
                        {{ form_widget(form.sizeEditeur, {'id':'editor-font-size-selector'}) }}
                {{ form_end(form) }}
